<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Events - Event Manager</title>
  </head>
  <body>
    <div id='body'>
      <%- include('partials/loader') %>
      <%- include('partials/navbar') %>
      
      <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-8">
          <h1 class="text-4xl font-bold">Upcoming Events</h1>
          <a href="/create-event" class="bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-600 transition">
            Create Event
          </a>
        </div>
        
        <div class="mb-6">
          <input type="text" id="search-input" placeholder="Search events..." 
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        
        <div id="events-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Event cards will be inserted here -->
        </div>
        
        <div id="loading" class="text-center py-8 hidden">
          <p class="text-gray-500">Loading events...</p>
        </div>
        
        <div id="no-events" class="text-center py-8 hidden">
          <p class="text-gray-500">No events found.</p>
        </div>
      </div>
    </div>
    
    <script src='global.js' type="module"></script>
    <script src='events.js' type="module"></script>
  </body>
</html>
